{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run MESSAGE-IX Model",
            "type": "shell",
            "command": "& \"${workspaceFolder}/.venv/Scripts/python.exe\"",
            "args": [
                "scripts/run_messageix_final.py"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Launch Dashboard",
            "type": "shell",
            "command": "& \"${workspaceFolder}/.venv/Scripts/python.exe\"",
            "args": [
                "launch_dashboard.py"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Install Dependencies",
            "type": "shell",
            "command": "& \"${workspaceFolder}/.venv/Scripts/pip.exe\"",
            "args": [
                "install",
                "-r",
                "requirements.txt"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Run Model + Dashboard",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Run MESSAGE-IX Model",
                "Launch Dashboard"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        }
    ]
}