{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run MESSAGE-IX Model",
            "type": "shell",
            "command": "& \"${workspaceFolder}/.venv/Scripts/python.exe\"",
            "args": [
                "scripts/run_messageix_final.py"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Install Dependencies",
            "type": "shell",
            "command": "& \"${workspaceFolder}/.venv/Scripts/pip.exe\"",
            "args": [
                "install",
                "-r",
                "requirements.txt"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        }
    ]
}